<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.portfolioapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PortfolioApp">
        <activity android:name=".PrizeListActivity"></activity>
        <activity android:name=".RevisePrizeActivity" />
        <activity android:name=".CertificateListActivity" />
        <activity android:name=".ReviseCertificateActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".WritePrizeActivity" />
        <activity android:name=".WriteCertificateActivity" />
        <activity android:name=".WritePortfolioActivity"/>
        <activity android:name=".PortfolioViewActivity"/>
        <activity android:name=".CertificateViewActivity" />
        <activity android:name=".PortfolioCalendarViewActivity" />
        <activity android:name=".PortfolioFullViewActivity"/>
        <activity android:name=".JoinActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>