<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortfolioViewActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:rowCount="10"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:text="활동명"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_viewP_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_gravity="center_vertical"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="center_vertical"
                android:text="날짜(기간)"
                android:textSize="20sp" />

            <LinearLayout>

                <TextView
                    android:id="@+id/tv_viewP_strat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="7dp"
                    android:text="시작 날짜"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_viewP_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:text="종료 날짜"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="center_vertical"
                android:text="활동 종류"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_viewP_sort"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_gravity="center_vertical"
                android:inputType="text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="center_vertical"
                android:text="활동 내용"
                android:maxLines="3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_writeP_content"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_gravity="center_vertical"
                android:inputType="textImeMultiLine"
                android:minLines="3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_gravity="center_vertical"
                android:text="자료첨부"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ImgV_viewP_picture"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_column="1"
                android:layout_row="4"
                android:text="사진 첨부" />
            <Button
                android:id="@+id/btn_writeP_file"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="5"
                android:layout_gravity="center_vertical"
                android:text="파일 첨부" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="20sp" />

            <LinearLayout>
                <Button
                    android:id="@+id/btn_viewP_modify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:layout_columnSpan="2"
                    android:layout_gravity="center"
                    android:text="수정" />

                <Button
                    android:id="@+id/btn_viewP_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="8"
                    android:layout_columnSpan="2"
                    android:layout_margin = "10dp"
                    android:layout_gravity="center"
                    android:text="삭제" />
            </LinearLayout>
        </GridLayout>

        //하단 네비게이션바
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/black"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/white"
            app:menu="@menu/navigationbar" />
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>